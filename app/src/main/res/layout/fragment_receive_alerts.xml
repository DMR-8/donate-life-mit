<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ReceiveAlertsFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backButton"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:icon="@drawable/ic_arrow_back"
        app:iconTint="#000"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/logoHolder"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/logo"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logoHolder"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:text="Please Select blood Groups for which you \n wish to receive the alerts"
        android:textAlignment="center"
        android:textColor="#000"
        android:lines="2"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bloodRecycler"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textHolder"
        app:layout_constraintBottom_toTopOf="@id/receive_alert_btn"
        app:layout_constraintStart_toStartOf="@id/receive_alert_btn"
        app:layout_constraintEnd_toEndOf="@id/receive_alert_btn"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/receive_alert_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Agree"
        android:textSize="16sp"
        android:backgroundTint="#07ab17"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>