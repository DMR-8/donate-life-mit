<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AdminViewFragment">

    <LinearLayout
        android:id="@+id/loginHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="12dp">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#07ab17"
                android:text="Admin User: "
                android:textSize="16sp"
                />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Manipal Blood Bank"
                    android:textSize="20sp"
                    />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
    </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/view_edit_button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#07ab17"
            android:text="View and Edit Alerts"
            android:textColor="#FFFFFF"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_alert"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Add New Alert"
            android:textColor="#FFFFFF"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/schedule_event"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorAccent"
            android:text="Schedule an Event"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/signout_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Sign out"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>